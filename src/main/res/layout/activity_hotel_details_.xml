<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotel_details_Activity">


    <ImageView
        android:id="@+id/hotel_image_details"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/hotel_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_image_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Place Name"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hotel_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_name_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Place Decription"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hotel_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_description_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Address"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/hotel_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_address_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Price"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton

        android:id="@+id/hotel_elegant_number_btn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/hotel_price_details"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="6dp"
        app:backGroundColor="@color/colorPrimary1"
        app:finalNumber="50"
        app:initialNumber="1">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>



    <Button
        android:id="@+id/hotel_continue_btn_details"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/hotel_elegant_number_btn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
 android:layout_marginTop="26dp"
        android:layout_marginBottom="0dp"
        android:elevation="8dp"
        android:text="Book your hotel"
        android:textAllCaps="false"
        android:textColor="@color/white"

        app:backgroundTint="@color/colorPrimary1">


    </Button>

</RelativeLayout>