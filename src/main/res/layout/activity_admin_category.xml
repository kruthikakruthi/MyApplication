<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Trip Details"
        android:textColor="#fece2f"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/t_explore"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_explore_black_24dp"
            android:background="@color/card1"
            />








    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:layout_marginTop="45dp"
        android:gravity="center"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/t_resort"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@color/card1"

            android:src="@drawable/ic_home_black_24dp"
            />










    </LinearLayout>

 <!--   <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_category_layout"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/t_airport"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@color/card3"
            android:src="@drawable/ic_flight_takeoff_black_24dp"
            />





    </LinearLayout>-->






</RelativeLayout>